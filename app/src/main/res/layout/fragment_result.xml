<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ResultFragment">
    <TextView
        android:id="@+id/fragment_title"
        android:text="검사 결과"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@color/deepBlue"
        android:textStyle="bold"
        android:fontFamily="@font/kopub_dotum_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:fontFamily="@font/kopub_dotum_light"
        android:text="우울증 점수"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/total_point_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/total_point_text_view"
        android:textColor="@color/deepBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="80dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/result_text_view"
        android:text="현재 ㅇㅇㅇ님의 상태는 중증도 우울 증세가 있습니다."
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/kopub_dotum_light"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/total_point_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/move_map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="주변 정신 분석 센터 위치"
        android:textColor="@color/deepBlue"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>