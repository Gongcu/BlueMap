<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PostWriteFragment">

    <LinearLayout
        android:id="@+id/top_bar_linear_layout"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/back_btn"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/back_text_view"
            android:text="뒤로가기"
            android:fontFamily="@font/kopub_dotum_light"
            android:textColor="@color/deepBlue"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/done_btn"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:background="@drawable/ic_baseline_done_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/title_edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:hint="제목을 작성하세요"
        android:textColorHint="@color/gray"
        android:textSize="24dp"
        android:textStyle="bold"
        android:fontFamily="@font/kopub_dotum_light"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_linear_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/content_edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="게시글의 내용을 입력하세요"
        android:textSize="18dp"
        android:textColor="@color/textColor"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/kopub_dotum_light"
        android:background="@null"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@+id/title_edit_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>