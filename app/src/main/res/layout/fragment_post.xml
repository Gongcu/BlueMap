<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PostFragment"
    >
    <data>
        <variable
            name="model"
            type="com.bluemap.overcom_blue.model.Post" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top_bar_linear_layout"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/back_btn"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginLeft="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/back_text_view"
                android:text="뒤로가기"
                android:fontFamily="@font/kopub_dotum_light"
                android:textColor="@color/deepBlue"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/user_image_view"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_linear_layout"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/name_text_view"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_linear_layout"
            app:layout_constraintLeft_toRightOf="@id/user_image_view"
            android:text="@{model.name}"
            android:textSize="12dp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.title}"
            android:textColor="@color/textColor"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/kopub_dotum_light"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_image_view"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/like_btn"
            android:clickable="true"
            app:srcCompat="@drawable/ic_outline_thumb_up_24"
            android:tint="@color/deepGray"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/top_bar_linear_layout"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{model.content}"
            android:textSize="16dp"
            android:textColor="@color/textColor"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="@font/kopub_dotum_light"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <LinearLayout
            android:id="@+id/left_linear_layout"
            android:orientation="horizontal"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/content_text_view"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:text="공감"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/like_count_text_view"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:text="@{String.valueOf(model.likeCount)}"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="댓글"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/comment_text_view"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:text="@{String.valueOf(model.commentCount)}"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_linear_layout"
            android:orientation="horizontal"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/content_text_view"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:text="작성일"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/date_text_view"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:text="@{model.createdAt.substring(0,10)}"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="조회수"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/view_count_text_view"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:text="@{String.valueOf(model.viewCount)}"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:id="@+id/guide_line"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/right_linear_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/guide_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/comment_linear_layout"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


        <View
            app:layout_constraintTop_toTopOf="@+id/comment_linear_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/comment_linear_layout"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_margin="2dp"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <EditText
                android:id="@+id/comment_edit_text"
                android:hint="댓글을 작성해주세요"
                android:layout_marginLeft="4dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/write_comment_btn"
                android:background="@drawable/ic_baseline_arrow_upward_24"
                android:layout_marginLeft="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
